@model IEnumerable<GestionnaireFootball.Models.Composition>

@{
    ViewData["Title"] = "Compositions d'équipe";
}

<h2>Compositions d'équipe</h2>

<p>
    <a asp-action="Creer" class="btn btn-success">Créer une nouvelle composition</a>
</p>

<div class="row">
    @foreach (var comp in Model)
    {
        <div class="col-md-4 mb-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@comp.Nom</h5>
                    <h6 class="card-subtitle mb-2 text-muted">Formation : @comp.Formation</h6>
                    <p class="card-text">
                        Créée le : @comp.DateCreation.ToString("dd/MM/yyyy")<br />
                        Postes remplis : @comp.NombreJoueursAssignes/11
                        @if (comp.Match != null)
                        {
                            <br />
                    
                            <small>Pour match vs @comp.Match.Adversaire</small>
                        }
                    </p>
                    <a asp-action="Editer" asp-route-id="@comp.Id" class="btn btn-primary btn-sm">Éditer</a>
                    <a asp-action="Visualiser" asp-route-id="@comp.Id" class="btn btn-info btn-sm">Visualiser</a>
                </div>
            </div>
        </div>
    }
</div>