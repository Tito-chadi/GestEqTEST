@model GestionnaireFootball.Models.Joueur
@{
    ViewData["Title"] = "Modifier joueur";
}
<h2>@ViewData["Title"]</h2>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <input type="hidden" asp-for="Id" />
            <div class="form-group mb-3">
                <label asp-for="Nom" class="control-label"></label>
                <input asp-for="Nom" class="form-control" />
                <span asp-validation-for="Nom" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" type="email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Poste" class="control-label"></label>
                <select asp-for="Poste" class="form-control" asp-items="Html.GetEnumSelectList<GestionnaireFootball.Models.Poste>()">
                    <option value="">Sélectionner un poste</option>
                </select>
                <span asp-validation-for="Poste" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="NumeroMaillot" class="control-label">Numéro de maillot</label>
                <input asp-for="NumeroMaillot" class="form-control" type="number" min="1" max="99" />
                <span asp-validation-for="NumeroMaillot" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="NoteGlobale" class="control-label">Note globale</label>
                <input asp-for="NoteGlobale" class="form-control" type="number" step="0.1" min="0" max="10" />
                <span asp-validation-for="NoteGlobale" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Enregistrer" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Annuler</a>
            </div>
        </form>
    </div>
</div>