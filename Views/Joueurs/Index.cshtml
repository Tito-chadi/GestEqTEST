@model IEnumerable<GestionnaireFootball.Models.Joueur>
@{
    ViewData["Title"] = "Joueurs";
}
<h2>@ViewData["Title"]</h2>
<p><a asp-action="Creer" class="btn btn-success">Nouveau joueur</a></p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Nom</th>
            <th>Poste</th>
            <th>Numéro</th>
            <th>Note</th>
            <th>Présence</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nom</td>
                <td>@item.Poste</td>
                <td>@(item.NumeroMaillot?.ToString() ?? "-")</td>
                <td>
                    <div class="progress" style="height: 20px; width: 60px;">
                        <div class="progress-bar @(item.NoteGlobale >= 7 ? "bg-success" : item.NoteGlobale >= 5 ? "bg-warning" : "bg-danger")"
                             style="width: @(item.NoteGlobale * 10)%">
                        </div>
                    </div>
                    <small>@item.NoteGlobale.ToString("0.0")/10</small>
                </td>
                <td>
                    @item.MatchsJoues matchs<br />
                    <small>@item.TauxPresence.ToString("0")% présence</small>
                </td>
                <td>
                    <a asp-action="Editer" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Modifier</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Détails</a>
                </td>
            </tr>
        }
    </tbody>
</table>