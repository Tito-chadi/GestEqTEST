@model IEnumerable<GestionnaireFootball.Models.Match>
@{
    ViewData["Title"] = "Calendrier des Matchs";
    var calendrier = ViewBag.Calendrier as List<List<DateTime?>>;
    var matchsDict = ViewBag.Matchs as Dictionary<DateTime, GestionnaireFootball.Models.Match>;
    var moisCourant = (DateTime)ViewBag.MoisCourant;
    var moisPrecedent = (DateTime)ViewBag.MoisPrecedent;
    var moisSuivant = (DateTime)ViewBag.MoisSuivant;
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>
            <i class="bi bi-calendar-event"></i> Calendrier des Matchs
        </h1>
        <div>
            @if (User.IsInRole("ADMIN") || User.IsInRole("ENTRAINEUR"))
            {
                <a href="@Url.Action("Creer")" class="btn btn-success">
                    <i class="bi bi-plus-circle"></i> Nouveau Match
                </a>
            }
            <a href="@Url.Action("Index")" class="btn btn-outline-secondary ms-2">
                <i class="bi bi-list"></i> Vue Liste
            </a>
        </div>
    </div>

    <!-- Navigation Mois -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center">
                <a href="@Url.Action("Calendrier", new { annee = moisPrecedent.Year, mois = moisPrecedent.Month })"
                   class="btn btn-outline-primary">
                    <i class="bi bi-chevron-left"></i> @moisPrecedent.ToString("MMMM yyyy")
                </a>

                <h3 class="mb-0 text-center">
                    @moisCourant.ToString("MMMM yyyy").ToUpper()
                </h3>

                <a href="@Url.Action("Calendrier", new { annee = moisSuivant.Year, mois = moisSuivant.Month })"
                   class="btn btn-outline-primary">
                    @moisSuivant.ToString("MMMM yyyy") <i class="bi bi-chevron-right"></i>
                </a>
            </div>
        </div>
    </div>

    <!-- Calendrier -->
    <div class="card shadow-lg">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-bordered mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th class="text-center" style="width: 14%">Lundi</th>
                            <th class="text-center" style="width: 14%">Mardi</th>
                            <th class="text-center" style="width: 14%">Mercredi</th>
                            <th class="text-center" style="width: 14%">Jeudi</th>
                            <th class="text-center" style="width: 14%">Vendredi</th>
                            <th class="text-center" style="width: 14%">Samedi</th>
                            <th class="text-center" style="width: 14%">Dimanche</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var semaine in calendrier)
                        {
                            <tr style="height: 120px;">
                                @foreach (var date in semaine)
                                {
                                    <td class="position-relative" style="vertical-align: top;">
                                        @if (date.HasValue)
                                        {
                                            <div class="position-absolute top-0 start-0 p-2 fw-bold
                                                                    @(date.Value.Date == DateTime.Today.Date ? "text-white bg-primary rounded" : "")">
                                                @date.Value.Day
                                            </div>

                                            <!-- Matchs du jour -->
                                            @if (matchsDict.ContainsKey(date.Value.Date))
                                            {
                                                var matchDuJour = matchsDict[date.Value.Date];
                                                <div class="mt-5">
                                                    <div class="card border-primary mb-2">
                                                        <div class="card-body p-2">
                                                            <small class="d-block text-muted">
                                                                <i class="bi bi-clock"></i>
                                                                @matchDuJour.DateHeure.ToString("HH:mm")
                                                            </small>
                                                            <div class="fw-bold">@matchDuJour.Adversaire</div>
                                                            <small class="d-block">
                                                                <i class="bi bi-geo-alt"></i>
                                                                @matchDuJour.Lieu
                                                            </small>
                                                            @if (!string.IsNullOrEmpty(matchDuJour.Score))
                                                            {
                                                                <div class="badge bg-success mt-1">
                                                                    @matchDuJour.Score
                                                                </div>
                                                            }
                                                            <a href="@Url.Action("Details", new { id = matchDuJour.Id })"
                                                               class="stretched-link"></a>
                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                            else if (date.Value.Date > DateTime.Today.Date)
                                            {
                                                <div class="mt-5 text-center">
                                                    <small class="text-muted">Pas de match</small>
                                                </div>
                                            }
                                        }
                                    </td>
                                }
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Légende -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h6><i class="bi bi-legend"></i> Légende :</h6>
                    <div class="d-flex flex-wrap gap-3">
                        <div class="d-flex align-items-center">
                            <div class="border border-primary bg-white rounded p-1 me-2" style="width: 20px; height: 20px;"></div>
                            <span>Match à venir</span>
                        </div>
                        <div class="d-flex align-items-center">
                            <div class="bg-success rounded p-1 me-2" style="width: 20px; height: 20px;"></div>
                            <span>Match joué (avec score)</span>
                        </div>
                        <div class="d-flex align-items-center">
                            <div class="bg-primary text-white rounded p-1 me-2" style="width: 20px; height: 20px;">@DateTime.Today.Day</div>
                            <span>Aujourd'hui</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .table-bordered td {
        border: 1px solid #dee2e6 !important;
    }

    .table td {
        transition: background-color 0.3s;
    }

        .table td:hover {
            background-color: rgba(13, 110, 253, 0.05);
        }

    .card.border-primary {
        border-width: 2px !important;
    }

    .stretched-link::after {
        position: absolute;
        top: 0;
        right: 0;
        bottom: 0;
        left: 0;
        z-index: 1;
        content: "";
    }
</style>