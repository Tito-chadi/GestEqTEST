@model GestionnaireFootball.Models.Match

@{
    ViewData["Title"] = "Détails du match";
}

<div class="card shadow">
    <!-- En-tête -->
    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center py-3">
        <div>
            <h4 class="card-title mb-0">
                <i class="bi bi-calendar-event me-2"></i>@Model.Adversaire
            </h4>
            <small class="opacity-75">@Model.Lieu</small>
        </div>
        
        <div class="text-end">
            <!-- Badge Type -->
            @if (Model.EstDomicile.HasValue)
            {
                <span class="badge @(Model.EstDomicile.Value ? "bg-light text-dark" : "bg-warning") mb-1">
                    @if (Model.EstDomicile.Value)
                    {
                        <i class="bi bi-house-door"></i> <span>Domicile</span>
                    }
                    else
                    {
                        <i class="bi bi-car-front"></i> <span>Extérieur</span>
                    }
                </span>
            }
            <br />
            
            <!-- Badge Résultat -->
            @if (Model.ButsPour.HasValue && Model.ButsContre.HasValue)
            {
                var badgeClass = Model.Resultat switch
                {
                    "Victoire" => "bg-success",
                    "Défaite" => "bg-danger",
                    "Nul" => "bg-warning",
                    _ => "bg-secondary"
                };
                <span class="badge @badgeClass mt-1">
                    <i class="bi bi-trophy"></i> @Model.Resultat
                </span>
            }
            else
            {
                <span class="badge bg-secondary mt-1">
                    <i class="bi bi-clock"></i> À venir
                </span>
            }
        </div>
    </div>

    <!-- Corps principal -->
    <div class="card-body">
        <!-- Section 1: Informations principales -->
        <div class="row mb-4">
            <div class="col-md-8">
                <div class="row">
                    <div class="col-md-6">
                        <div class="card border-light mb-3">
                            <div class="card-header bg-light">
                                <i class="bi bi-clock me-1"></i> <strong>Date & Heure</strong>
                            </div>
                            <div class="card-body">
                                <h5 class="mb-1">@Model.DateHeure.ToString("dddd dd MMMM yyyy")</h5>
                                <p class="text-muted mb-0">
                                    <i class="bi bi-watch"></i> @Model.DateHeure.ToString("HH:mm")
                                    
                                    @if (!Model.ButsPour.HasValue)
                                    {
                                        <br />
                                        
                                            var diff = (Model.DateHeure - DateTime.Now).TotalDays;
                                            if (diff > 0)
                                            {
                                                <span class="text-warning">
                                                    <i class="bi bi-hourglass-split"></i> Dans @Math.Ceiling(diff) jour(s)
                                                </span>
                                            }
                                            else if (diff > -1)
                                            {
                                                <span class="text-danger">
                                                    <i class="bi bi-exclamation-triangle"></i> Aujourd'hui !
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">
                                                    <i class="bi bi-calendar-x"></i> Match passé
                                                </span>
                                            }
                                        }
                                    }
                                </p>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <div class="card border-light mb-3">
                            <div class="card-header bg-light">
                                <i class="bi bi-graph-up me-1"></i> <strong>Score</strong>
                            </div>
                            <div class="card-body text-center">
                                @if (Model.ButsPour.HasValue && Model.ButsContre.HasValue)
                                {
                                    <div class="display-4 fw-bold">
                                        <span class="text-primary">@Model.ButsPour</span>
                                        <span class="mx-2">-</span>
                                        <span class="text-danger">@Model.ButsContre</span>
                                    </div>
                                    @if (!string.IsNullOrEmpty(Model.Score))
                                    {
                                        <small class="text-muted">(@Model.Score)</small>
                                    }
                                }
                                else
                                {
                                    <div class="py-3">
                                        <i class="bi bi-dash-circle display-6 text-muted"></i>
                                        <p class="text-muted mt-2 mb-0">Score non enregistré</p>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Statistiques rapides -->
                <div class="row">
                    <div class="col-4">
                        <div class="card border-light text-center">
                            <div class="card-body">
                                <h2 class="mb-0">@(Model.Presences?.Count ?? 0)</h2>
                                <small class="text-muted">Présences</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="card border-light text-center">
                            <div class="card-body">
                                <h2 class="mb-0">@(Model.Compositions?.Count ?? 0)</h2>
                                <small class="text-muted">Compositions</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="card border-light text-center">
                            <div class="card-body">
                                <h2 class="mb-0">@(Model.Notifications?.Count ?? 0)</h2>
                                <small class="text-muted">Notifications</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Actions -->
            <div class="col-md-4">
                <div class="card border-light">
                    <div class="card-header bg-light">
                        <i class="bi bi-lightning-charge me-1"></i> <strong>Actions rapides</strong>
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-lg">
                                <i class="bi bi-pencil-square me-2"></i>Modifier
                            </a>
                            
                            @if (!Model.ButsPour.HasValue)
                            {
                                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success btn-lg">
                                    <i class="bi bi-plus-circle me-2"></i>Ajouter le score
                                </a>
                            }
                            else
                            {
                                <button class="btn btn-outline-success btn-lg" disabled>
                                    <i class="bi bi-check-circle me-2"></i>Score enregistré
                                </button>
                            }
                            
                            <!-- Présences -->
                            @if (Model.Presences?.Any() == true)
                            {
                                <a href="@Url.Action("Index", "Presences", new { matchId = Model.Id })" 
                                   class="btn btn-primary">
                                    <i class="bi bi-people me-2"></i>Voir présences (@Model.Presences.Count)
                                </a>
                            }
                            else
                            {
                                <a href="@Url.Action("Create", "Presences", new { matchId = Model.Id })" 
                                   class="btn btn-outline-primary">
                                    <i class="bi bi-person-plus me-2"></i>Saisir présences
                                </a>
                            }
                            
                            <!-- Compositions -->
                            @if (Model.Compositions?.Any() == true)
                            {
                                <a href="@Url.Action("Index", "Compositions", new { matchId = Model.Id })" 
                                   class="btn btn-info">
                                    <i class="bi bi-diagram-3 me-2"></i>Voir compositions (@Model.Compositions.Count)
                                </a>
                            }
                            else
                            {
                                <a href="@Url.Action("Create", "Compositions", new { matchId = Model.Id })" 
                                   class="btn btn-outline-info">
                                    <i class="bi bi-plus-circle me-2"></i>Créer composition
                                </a>
                            }
                            
                            <!-- Notifications -->
                            <a href="@Url.Action("Create", "Notifications", new { matchId = Model.Id })" 
                               class="btn btn-outline-secondary">
                                <i class="bi bi-bell me-2"></i>Notifier les joueurs
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Section 2: Présences (si existantes) -->
        @if (Model.Presences?.Any() == true)
        {
            <div class="card border-light mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="bi bi-people me-2"></i>Présences
                        <span class="badge bg-primary ms-2">@Model.Presences.Count</span>
                    </h5>
                </div>
                <div class="card-body">
                    @{
                        var presents = Model.Presences.Count(p => p.Statut.ToString() == "Present");
                        var totalPres = Model.Presences.Count;
                        var taux = totalPres > 0 ? (presents * 100 / totalPres) : 0;
                    }
                    
                    <div class="mb-3">
                        <div class="d-flex justify-content-between mb-1">
                            <span>Taux de présence: <strong>@taux%</strong></span>
                            <span>@presents / @totalPres joueurs</span>
                        </div>
                        <div class="progress" style="height: 20px;">
                            <div class="progress-bar @(taux >= 80 ? "bg-success" : taux >= 60 ? "bg-warning" : "bg-danger")" 
                                 role="progressbar" 
                                 style="width: @taux%" 
                                 aria-valuenow="@taux" 
                                 aria-valuemin="0" 
                                 aria-valuemax="100">
                            </div>
                        </div>
                    </div>
                    
                    <div class="table-responsive">
                        <table class="table table-sm table-hover">
                            <thead>
                                <tr>
                                    <th>Joueur</th>
                                    <th>Poste</th>
                                    <th>Statut</th>
                                    <th>Arrivée</th>
                                    <th>Commentaire</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var presence in Model.Presences.OrderBy(p => p.Joueur?.Nom))
                                {
                                    <tr>
                                        <td>
                                            @if (presence.Joueur != null)
                                            {
                                                <strong>@presence.Joueur.Nom</strong>
                                            }
                                            else
                                            {
                                                <em class="text-muted">Joueur inconnu</em>
                                            }
                                        </td>
                                        <td>@presence.Joueur?.Poste</td>
                                        <td>
                                            @{
                                                var badgeClass = presence.Statut.ToString() switch
                                                {
                                                    "Present" => "bg-success",
                                                    "Absent" => "bg-danger",
                                                    "Retard" => "bg-warning",
                                                    "Excusé" => "bg-info",
                                                    _ => "bg-secondary"
                                                };
                                            }
                                            <span class="badge @badgeClass">@presence.Statut.ToString()</span>
                                        </td>
                                        <td>
                                            @if (presence.HeureArrivee.HasValue)
                                            {
                                                @presence.HeureArrivee.Value.ToString("HH:mm")
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(presence.Commentaire))
                                            {
                                                <small>@presence.Commentaire</small>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }

        <!-- Section 3: Notifications (si existantes) -->
        @if (Model.Notifications?.Any() == true)
        {
            <div class="card border-light mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="bi bi-bell me-2"></i>Notifications
                        <span class="badge bg-primary ms-2">@Model.Notifications.Count</span>
                    </h5>
                </div>
                <div class="card-body">
                    <div class="list-group">
                        @foreach (var notif in Model.Notifications.OrderByDescending(n => n.DateEnvoi).Take(5))
                        {
                            <div class="list-group-item">
                                <div class="d-flex w-100 justify-content-between">
                                    <div>
                                        @if (!string.IsNullOrEmpty(notif.Type))
                                        {
                                            <span class="badge bg-info me-2">@notif.Type</span>
                                        }
                                        <strong>@(notif.EstLue ? "✓ Lue" : "● Non lue")</strong>
                                    </div>
                                    <small class="text-muted">
                                        @notif.DateEnvoi.ToString("dd/MM/yyyy HH:mm")
                                    </small>
                                </div>
                                <p class="mt-2 mb-1">@notif.Message</p>
                                
                                @if (notif.Destinataire != null)
                                {
                                    <small class="text-muted">
                                        <i class="bi bi-person"></i> Pour: @notif.Destinataire.Nom
                                    </small>
                                }
                            </div>
                        }
                    </div>
                    
                    @if (Model.Notifications.Count > 5)
                    {
                        <div class="text-center mt-3">
                            <a href="@Url.Action("Index", "Notifications", new { matchId = Model.Id })" 
                               class="btn btn-sm btn-outline-secondary">
                                Voir toutes les notifications (@Model.Notifications.Count)
                            </a>
                        </div>
                    }
                </div>
            </div>
        }

        <!-- Section 4: Compositions (si existantes) -->
        @if (Model.Compositions?.Any() == true)
        {
            <div class="card border-light">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="bi bi-diagram-3 me-2"></i>Compositions associées
                        <span class="badge bg-primary ms-2">@Model.Compositions.Count</span>
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        @foreach (var comp in Model.Compositions.Take(3))
                        {
                            <div class="col-md-4 mb-3">
                                <div class="card h-100 border">
                                    <div class="card-body">
                                        <h6 class="card-title">@comp.Nom</h6>
                                        <p class="card-text">
                                            <span class="badge bg-secondary">@comp.Formation</span><br />
                                            <small class="text-muted">
                                                Créée le @comp.DateCreation.ToString("dd/MM/yyyy")
                                            </small>
                                        </p>
                                    </div>
                                    <div class="card-footer bg-transparent border-top-0">
                                        <a href="@Url.Action("Details", "Compositions", new { id = comp.Id })" 
                                           class="btn btn-sm btn-outline-primary w-100">
                                            <i class="bi bi-eye"></i> Voir
                                        </a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                    
                    @if (Model.Compositions.Count > 3)
                    {
                        <div class="text-center mt-3">
                            <a href="@Url.Action("Index", "Compositions", new { matchId = Model.Id })" 
                               class="btn btn-sm btn-outline-secondary">
                                Voir toutes les compositions (@Model.Compositions.Count)
                            </a>
                        </div>
                    }
                </div>
            </div>
        }
    </div>

    <!-- Pied de page -->
    <div class="card-footer text-muted bg-light">
        <div class="d-flex justify-content-between align-items-center">
            <small>
                <i class="bi bi-info-circle me-1"></i>
                ID: @Model.Id | Consulté le @DateTime.Now.ToString("dd/MM/yyyy HH:mm")
            </small>
            <div>
                <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                    <i class="bi bi-arrow-left me-1"></i>Retour au calendrier
                </a>
            </div>
        </div>
    </div>
</div>