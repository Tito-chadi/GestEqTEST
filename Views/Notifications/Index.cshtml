@model IEnumerable<GestionnaireFootball.Models.Notification>
@{
    ViewData["Title"] = "Notifications";
    var types = ViewBag.Types as List<string> ?? new List<string>();
    var selectedType = ViewBag.SelectedType as string;
    var nonLues = ViewBag.NonLues as bool?;
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>
            <i class="bi bi-bell"></i> Notifications
            <span id="notificationBadge" class="badge bg-danger d-none"></span>
        </h1>
        <div>
            <a href="@Url.Action("Creer")" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Nouvelle Notification
            </a>
            <a href="@Url.Action("MarquerToutesCommesLues")" class="btn btn-outline-warning ms-2">
                <i class="bi bi-check-all"></i> Tout marquer comme lu
            </a>
        </div>
    </div>

    <!-- Filtres -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">Type :</label>
                    <select name="type" class="form-select">
                        <option value="">Tous les types</option>
                        @foreach (var type in types)
                        {
                            <option value="@type" selected="@(type == selectedType)">@type</option>
                        }
                    </select>
                </div>
                <div class="col-md-4">
                    <label class="form-label">Statut :</label>
                    <select name="nonLues" class="form-select">
                        <option value="">Toutes</option>
                        <option value="true" selected="@(nonLues == true)">Non lues seulement</option>
                        <option value="false" selected="@(nonLues == false)">Lues seulement</option>
                    </select>
                </div>
                <div class="col-md-4 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-filter"></i> Filtrer
                    </button>
                    <a href="@Url.Action("Index")" class="btn btn-outline-secondary ms-2">
                        <i class="bi bi-x-circle"></i>
                    </a>
                </div>
            </form>
        </div>
    </div>

    <!-- Liste des notifications -->
    <div class="card shadow-lg">
        <div class="card-body p-0">
            @if (Model.Any())
            {
                <div class="list-group list-group-flush">
                    @foreach (var notification in Model)
                    {
                        <div class="list-group-item @(!notification.EstLue ? "bg-light" : "")">
                            <div class="d-flex justify-content-between align-items-start">
                                <div class="flex-grow-1">
                                    <div class="d-flex align-items-center mb-1">
                                        <span class="badge bg-@GetTypeColor(notification.Type) me-2">
                                            @notification.Type
                                        </span>
                                        <small class="text-muted">
                                            <i class="bi bi-clock"></i> @notification.DateEnvoi.ToString("dd/MM/yyyy HH:mm")
                                        </small>
                                        @if (!notification.EstLue)
                                        {
                                            <span class="badge bg-danger ms-2">Nouveau</span>
                                        }
                                    </div>

                                    <p class="mb-1">@notification.Message</p>

                                    <div class="small text-muted">
                                        @if (notification.Match != null)
                                        {
                                            <span class="me-3">
                                                <i class="bi bi-calendar-event"></i>
                                                @notification.Match.Adversaire - @notification.Match.DateHeure.ToString("dd/MM")
                                            </span>
                                        }
                                        @if (notification.Destinataire != null)
                                        {
                                            <span>
                                                <i class="bi bi-person"></i> Pour : @notification.Destinataire.NomComplet
                                            </span>
                                        }
                                        else
                                        {
                                            <span><i class="bi bi-globe"></i> Notification générale</span>
                                        }
                                    </div>
                                </div>

                                <div class="dropdown ms-3">
                                    <button class="btn btn-sm btn-outline-secondary dropdown-toggle"
                                            type="button" data-bs-toggle="dropdown">
                                        <i class="bi bi-three-dots"></i>
                                    </button>
                                    <ul class="dropdown-menu">
                                        @if (!notification.EstLue)
                                        {
                                            <li>
                                                <a class="dropdown-item"
                                                   href="@Url.Action("MarquerCommeLue", new { id = notification.Id })">
                                                    <i class="bi bi-check-circle"></i> Marquer comme lu
                                                </a>
                                            </li>
                                        }
                                        <li>
                                            <a class="dropdown-item"
                                               href="@Url.Action("Supprimer", new { id = notification.Id })">
                                                <i class="bi bi-trash"></i> Supprimer
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-bell-slash display-1 text-muted"></i>
                    <h4 class="mt-3">Aucune notification</h4>
                    <p class="text-muted">Vous n'avez aucune notification pour le moment.</p>
                    <a href="@Url.Action("Creer")" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> Créer une notification
                    </a>
                </div>
            }
        </div>
    </div>

    <!-- Statistiques -->
    @if (Model.Any())
    {
        <div class="row mt-4">
            <div class="col-md-3">
                <div class="card bg-primary text-white">
                    <div class="card-body text-center">
                        <h5 class="card-title">@Model.Count()</h5>
                        <p class="card-text">Total notifications</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-warning text-dark">
                    <div class="card-body text-center">
                        <h5 class="card-title">@Model.Count(n => !n.EstLue)</h5>
                        <p class="card-text">Non lues</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-success text-white">
                    <div class="card-body text-center">
                        <h5 class="card-title">@Model.Count(n => n.Type == "Rappel")</h5>
                        <p class="card-text">Rappels</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-info text-white">
                    <div class="card-body text-center">
                        <h5 class="card-title">@Model.Count(n => n.DestinataireId == null)</h5>
                        <p class="card-text">Générales</p>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        // Rafraîchir le badge de notifications toutes les 30 secondes
        function updateNotificationBadge() {
            fetch('@Url.Action("GetNonLuesCount", "Notifications")')
                .then(response => response.json())
                .then(data => {
                    const badge = document.getElementById('notificationBadge');
                    if (data.count > 0) {
                        badge.textContent = data.count;
                        badge.classList.remove('d-none');
                        // Mettre à jour le titre de la page
                        document.title = `(${data.count}) Notifications - Gestionnaire Football`;
                    } else {
                        badge.classList.add('d-none');
                        document.title = 'Notifications - Gestionnaire Football';
                    }
                });
        }

        // Initialiser et mettre à jour périodiquement
        $(document).ready(function() {
            updateNotificationBadge();
            setInterval(updateNotificationBadge, 30000); // 30 secondes
        });
    </script>
}

@functions {
    string GetTypeColor(string type)
    {
        return type switch
        {
            "Urgent" => "danger",
            "Rappel" => "warning",
            "Changement" => "info",
            "Félicitations" => "success",
            "Avertissement" => "dark",
            _ => "secondary"
        };
    }
}