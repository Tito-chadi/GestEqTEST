@model IEnumerable<GestionnaireFootball.Models.Presence>
@{
    ViewData["Title"] = "Présences";
    var evenements = ViewBag.Evenements as Dictionary<string, string> ?? new Dictionary<string, string>();
    var selectedEventId = ViewBag.SelectedEventId as string;
    var selectedEventType = ViewBag.SelectedEventType as string;
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>
            <i class="bi bi-clipboard-check"></i> @ViewData["Title"]
        </h1>
        <div>
            <a href="@Url.Action("Creer")" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Saisir une présence
            </a>
        </div>
    </div>

    <!-- Filtres -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-6">
                    <label class="form-label">Événement :</label>
                    <select name="evenementType" class="form-select mb-2" id="eventTypeSelect">
                        <option value="">Sélectionner un type</option>
                        <option value="Match" selected="@(selectedEventType == "Match")">Match</option>
                        <option value="Entrainement" selected="@(selectedEventType == "Entrainement")">Entraînement</option>
                    </select>
                    <select name="evenementId" class="form-select" id="eventSelect">
                        <option value="">Tous les événements</option>
                        @foreach (var ev in evenements)
                        {
                            <option value="@ev.Key" selected="@(ev.Key == selectedEventId)">@ev.Value</option>
                        }
                    </select>
                </div>
                <div class="col-md-4">
                    <label class="form-label">Statut :</label>
                    <select name="statut" class="form-select">
                        <option value="">Tous les statuts</option>
                        <option value="Present">Présent</option>
                        <option value="Absent">Absent</option>
                        <option value="Retard">Retard</option>
                        <option value="Excusé">Excusé</option>
                    </select>
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-filter"></i> Filtrer
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Liste -->
    @if (Model.Any())
    {
        <div class="card shadow">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Joueur</th>
                            <th>Poste</th>
                            <th>Événement</th>
                            <th>Date</th>
                            <th>Statut</th>
                            <th>Heure arrivée</th>
                            <th>Commentaire</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var presence in Model.OrderByDescending(p => p.DateSaisie))
                        {
                            <tr>
                                <td>
                                    @if (presence.Joueur != null)
                                    {
                                        <strong>@presence.Joueur.Nom</strong>
                                    }
                                    else
                                    {
                                        <em class="text-muted">Joueur inconnu</em>
                                    }
                                </td>
                                <td>@presence.Joueur?.Poste</td>
                                <td>
                                    @if (presence.Match != null)
                                    {
                                        <span class="badge bg-primary">Match</span>
                            
                                        <br />
                                        <small>vs @presence.Match.Adversaire</small>
                                    }
                                    else if (presence.EntrainementId.HasValue)
                                    {
                                        <span class="badge bg-info">Entraînement</span>
                            
                                        <br />
                                        <small>ID: @presence.EntrainementId</small>
                                    }
                                </td>
                                <td>
                                    @if (presence.Match != null)
                                    {
                                        @presence.Match.DateHeure.ToString("dd/MM")
                                    }
                                    else
                                    {
                                        @presence.DateSaisie.ToString("dd/MM")
                                    }
                                </td>
                                <td>
                                    @{
                                        var badgeClass = presence.Statut.ToString() switch
                                        {
                                            "Present" => "bg-success",
                                            "Absent" => "bg-danger",
                                            "Retard" => "bg-warning",
                                            "Excusé" => "bg-info",
                                            _ => "bg-secondary"
                                        };
                                    }
                                    <span class="badge @badgeClass">@presence.Statut.ToString()</span>
                                </td>
                                <td>
                                    @if (presence.HeureArrivee.HasValue)
                                    {
                                        @presence.HeureArrivee.Value.ToString("HH:mm")
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(presence.Commentaire))
                                    {
                                        <small title="@presence.Commentaire">
                                            @(presence.Commentaire.Length > 30 ? presence.Commentaire.Substring(0, 30) + "..." : presence.Commentaire)
                                        </small>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a href="@Url.Action("Modifier", new { id = presence.Id })"
                                           class="btn btn-outline-warning" title="Modifier">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a href="@Url.Action("Supprimer", new { id = presence.Id })"
                                           class="btn btn-outline-danger" title="Supprimer">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Résumé -->
        <div class="row mt-4">
            <div class="col-md-3">
                <div class="card bg-primary text-white">
                    <div class="card-body text-center">
                        <h3>@Model.Count()</h3>
                        <p class="mb-0">Présences totales</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-success text-white">
                    <div class="card-body text-center">
                        <h3>@Model.Count(p => p.Statut.ToString() == "Present")</h3>
                        <p class="mb-0">Présents</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-danger text-white">
                    <div class="card-body text-center">
                        <h3>@Model.Count(p => p.Statut.ToString() == "Absent")</h3>
                        <p class="mb-0">Absents</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-warning text-dark">
                    <div class="card-body text-center">
                        <h3>@Model.Count(p => p.Statut.ToString() == "Retard")</h3>
                        <p class="mb-0">Retards</p>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="bi bi-clipboard-x display-1 text-muted"></i>
            <h4 class="mt-3">Aucune présence enregistrée</h4>
            <p class="text-muted">Commencez par saisir une présence.</p>
            <a href="@Url.Action("Creer")" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Saisir une présence
            </a>
        </div>
    }
</div>

@section Scripts {
    <script>
        // Gestion dynamique des événements
        document.getElementById('eventTypeSelect').addEventListener('change', function() {
            const eventSelect = document.getElementById('eventSelect');
            eventSelect.innerHTML = '<option value="">Tous les événements</option>';

            if (this.value === 'Match') {
                // En production, charger les matchs via AJAX
                console.log('Charger les matchs...');
            } else if (this.value === 'Entrainement') {
                // En production, charger les entraînements via AJAX
                console.log('Charger les entraînements...');
            }
        });
    </script>
}